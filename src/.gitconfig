[user]
    name = Mike Fisher
    email = mike@mbfisher.com
[core]
    excludesfile = ~/.gitignore
[alias]
    lg = log --decorate --pretty=oneline --abbrev-commit --no-merges --graph
    a = add --all .
    c = commit
    d = diff
    ds = diff --staged
    s = status
    ps = push
    pf = push -f
    pt = push --tags
    pl = pull
    pr = pull --rebase
	diff = diff --color
    add = add --all .
    squash = "! git-squash"
[push]
    default = current
[pull]
    default = current
[rerere]
	enabled = true
	autoupdate = true
