[core]
    excludesfile = ~/.gitignore
[alias]
    lg = log --graph --pretty=format:'%C(dim)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --no-merges

    a = add --all .
    c = commit
    d = diff
    ds = diff --staged
    s = status
    ps = push
    pf = push -f
    pt = push --tags
    pl = pull
    pr = pull --rebase
	diff = diff --color
    add = add --all .
    squash = "! git-squash"
[push]
    default = current
[pull]
    default = current
[rerere]
	enabled = true
	autoupdate = true
[commit]
	gpgSign = true
